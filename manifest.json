{
  "manifest_version": 2,

  "name": "微信公众平台调试器",  
  "version": "0.1.0",  
  "description": "模拟微信公众平台与你的测试服务器调试。",  
  "icons": { "128": "img/weixin-icon2.png" },

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "tabs",
    "http://*/*"
  ],

  "browser_action": {  
    "default_icon": "img/weixin-icon2.png",
    "default_title": "微信公众平台调试器"
  },  

  "options_page": "options.html"
}